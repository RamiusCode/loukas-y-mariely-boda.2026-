              </a>
            </div>
          </div>
        </div>
      </div>

      <div class="flex justify-center mt-10" id="flores-abajo-despedida">
        <img
          src="/imagenes/Separadores.webp"
          alt="Flores decorativas"
          class="w-40 md:w-48 lg:w-56 h-auto object-contain opacity-90"
        />
      </div>
    </div>
  </div>
</section>

<script>
  import { gsap } from "gsap";
  import { ScrollTrigger } from "gsap/ScrollTrigger";

  gsap.registerPlugin(ScrollTrigger);

  if (typeof window !== "undefined") {
    document.addEventListener("DOMContentLoaded", () => {
      gsap.set("#flores-arriba-despedida", { opacity: 0, y: 20 });
      gsap.set("#card-despedida", { opacity: 0, y: 30 });
      gsap.set("#flores-abajo-despedida", { opacity: 0, y: 20 });

      ScrollTrigger.create({
        trigger: "#flores-arriba-despedida",
        start: "top 85%",
        onEnter: () => {
          const tl = gsap.timeline();
          tl.to(
            "#flores-arriba-despedida",
            { opacity: 1, y: 0, duration: 1, ease: "power2.out" },
            0,
          )
            .to(
              "#card-despedida",
              { opacity: 1, y: 0, duration: 1.2, ease: "power2.out" },
              0.2,
            )
            .to(
              "#flores-abajo-despedida",
              { opacity: 1, y: 0, duration: 1, ease: "power2.out" },
              0.4,
            );

          gsap.to("#linea-decorativa svg", {
            scale: 1.15,
            duration: 2.5,
            ease: "sine.inOut",
            yoyo: true,
            repeat: -1,
            delay: 1.5,
          });
        },
        onLeaveBack: () => {
          gsap.killTweensOf("#linea-decorativa svg");
          gsap.set("#flores-arriba-despedida", { opacity: 0, y: 20 });
          gsap.set("#card-despedida", { opacity: 0, y: 30 });
          gsap.set("#flores-abajo-despedida", { opacity: 0, y: 20 });
        },
      });
    });
  }
</script>

<style>
  #card-despedida {
    transition: all 0.5s cubic-bezier(0.4, 0, 0.2, 1);
  }
  #card-despedida:hover {
    transform: translateY(-5px);
    box-shadow: 0 20px 40px rgba(140, 90, 99, 0.2);
  }

  /* BOTÓN WHATSAPP - UNA SOLA LÍNEA */
  .boton-whatsapp {
    display: inline-flex;
    align-items: center;
    gap: 10px;
    padding: 11px 26px;
    background: linear-gradient(135deg, #8c5a63, #5a4a42);
    color: white;
    border-radius: 50px;
    text-decoration: none;
    position: relative;
    overflow: hidden;
    transition: all 0.4s ease;
    box-shadow: 0 4px 20px rgba(140, 90, 99, 0.35);
    border: 1px solid rgba(255, 255, 255, 0.15);
    white-space: nowrap;
  }

  .boton-whatsapp::before {
    content: "";
    position: absolute;
    top: 0;
    left: -100%;
    width: 100%;
    height: 100%;
    background: linear-gradient(
      90deg,
      transparent,
      rgba(255, 255, 255, 0.15),
      transparent
    );
    transition: left 0.5s ease;
  }

  .boton-whatsapp::after {
    content: "";
    position: absolute;
    inset: 0;
    border-radius: 50px;
    border: 1px solid rgba(201, 149, 108, 0.4);
    pointer-events: none;
  }

  .boton-whatsapp:hover {
    transform: translateY(-3px);
    box-shadow: 0 8px 28px rgba(140, 90, 99, 0.5);
    background: linear-gradient(135deg, #9e6b7a, #6b5550);
  }

  .boton-whatsapp:hover::before {
    left: 100%;
  }

  .boton-whatsapp:active {
    transform: translateY(-1px);
    box-shadow: 0 4px 15px rgba(140, 90, 99, 0.4);
  }

  .boton-ws-icono {
    display: flex;
    align-items: center;
    color: #c9956c;
    flex-shrink: 0;
  }

  .boton-ws-texto {
    letter-spacing: 0.05em;
    font-weight: 500;
    white-space: nowrap;
  }

  .boton-flecha {
    display: flex;
    align-items: center;
    color: rgba(255, 255, 255, 0.7);
    transition:
      transform 0.3s ease,
      color 0.3s ease;
    flex-shrink: 0;
  }

  .boton-whatsapp:hover .boton-flecha {
    transform: translateX(4px);
    color: #c9956c;
  }

  .separador-botones {
    display: flex;
    align-items: center;
    justify-content: center;
    opacity: 0.6;
  }

  @media (max-width: 640px) {
    .separador-botones {
      transform: rotate(90deg);
    }
  }
</style>
