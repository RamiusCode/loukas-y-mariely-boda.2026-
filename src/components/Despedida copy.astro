<script>
  import { gsap } from "gsap";
  import { ScrollTrigger } from "gsap/ScrollTrigger";

  gsap.registerPlugin(ScrollTrigger);

  if (typeof window !== "undefined") {
    document.addEventListener("DOMContentLoaded", () => {
      console.log("ðŸ’‘ Iniciando secciÃ³n de despedida de boda...");

      // ðŸŽ¯ ESTADO INICIAL - Todos con scale para animaciÃ³n simultÃ¡nea
      // Agrupamos todos los IDs y clases en una sola variable para mÃ¡s limpieza y facilidad de uso
      const elementosAnimar =
        "#flores-arriba-despedida, #card-despedida, #titulo-despedida, .parrafo-animado, #linea-decorativa, #texto-confirmar, #boton-confirmar, #flores-abajo-despedida";

      gsap.set(elementosAnimar, { opacity: 0, scale: 0.8 });

      // âœ¨ ANIMACIÃ“N SIMULTÃNEA - MÃXIMA FLUIDEZ
      ScrollTrigger.create({
        trigger: "#flores-arriba-despedida",
        start: "top 85%",

        onEnter: () => {
          const tl = gsap.timeline();

          // Animamos TODOS los elementos JUNTOS.
          // Usamos un pequeÃ±o 'stagger' (0.05) para evitar la carga de todos en el mismo instante (lo que causa temblor)
          // pero es tan rÃ¡pido que parece simultÃ¡neo.
          tl.to(
            elementosAnimar,
            {
              opacity: 1,
              scale: 1,
              duration: 1.2,
              ease: "back.out(1.4)",
              stagger: 0.05, // Retraso muy pequeÃ±o para simular simultaneidad fluida
            },
            0,
          ); // El '0' asegura que todas las animaciones empiecen inmediatamente

          // ðŸŒ¸ ANIMACIONES CONTINUAS (loopeadas) - Puestas dentro del 'onEnter'
          // Las animaciones loop deben matarse si el usuario hace scroll hacia arriba (onLeaveBack)

          // CorazÃ³n latiendo
          gsap.to("#linea-decorativa svg", {
            scale: 1.3,
            duration: 1.5,
            ease: "sine.inOut",
            yoyo: true,
            repeat: -1,
            delay: 1.0, // Un pequeÃ±o delay para que empiece despuÃ©s de la animaciÃ³n de entrada
          });

          // BotÃ³n pulsando suavemente
          gsap.to("#boton-confirmar img", {
            scale: 1.05,
            y: -5,
            duration: 2.5,
            ease: "sine.inOut",
            yoyo: true,
            repeat: -1,
            delay: 1.0,
          });

          // Texto confirmar con brillo sutil
          gsap.to("#texto-confirmar", {
            textShadow: "0 0 15px rgba(201, 169, 97, 0.5)",
            duration: 2.5,
            ease: "sine.inOut",
            yoyo: true,
            repeat: -1,
            delay: 1.0,
          });
        },

        onLeaveBack: () => {
          // ðŸ”¥ Detener las animaciones loopeadas (crucial para evitar consumo de CPU y bugs)
          gsap.killTweensOf("#linea-decorativa svg");
          gsap.killTweensOf("#boton-confirmar img");
          gsap.killTweensOf("#texto-confirmar");

          // Resetear todo (usando la variable de agrupaciÃ³n)
          gsap.set(elementosAnimar, { opacity: 0, scale: 0.8 });
        },
      });

      console.log("ðŸ’‘âœ¨ Â¡SecciÃ³n de despedida activada con Ã©xito!");
    });
  }
</script>

<style>
  /* ðŸ›‘ ELIMINAMOS EL BLOQUE <style> DUPLICADO y el cÃ³digo de hover CSS se mantiene */
