  <div class="max-w-xl mx-auto text-center relative">

          <!-- T√çTULO DIRECCI√ìN -->
    <div class="mb-2" id="titulo-direccion">
      <h2
        class="font-charm text-2xl md:text-3xl text-[#9E6B7A] font-bold tracking-wide"
